<div id="bookmark_form_<%= micropost.id %> bookmark_form">
  <% unless current_user.id == micropost.user_id %>
    <% if current_user.already_marked?(micropost) %>
      <%= link_to micropost_bookmark_path(micropost, id: micropost.id),method: :delete, class: "bookmark" do %>
        <svg role="img" class="bookmark" xmlns="http://www.w3.org/2000/svg" width="22px" height="22px" viewBox="0 0 22 22" aria-labelledby="bookmarkIconTitle" stroke="#0066cc" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round" fill="#0066cc" color="black"> <title id="bookmarkIconTitle">Bookmark</title> <path d="M17,6.65881537 L17,19.5857864 L12,16.4078051 L7,19.5857864 L7,6.65881537 C7,5.19039219 8.11928813,4 9.5,4 L14.5,4 C15.8807119,4 17,5.19039219 17,6.65881537 Z"/> </svg>
      <% end %>
    <% else %>
      <%= link_to micropost_bookmarks_path(micropost),method: :post, class: "bookmark" do %>
        <svg role="img" class="bookmark" xmlns="http://www.w3.org/2000/svg" width="22px" height="22px" viewBox="0 0 22 22" aria-labelledby="bookmarkIconTitle" stroke="#bfbfbf" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round" fill="none" color="black"> <title id="bookmarkIconTitle">Bookmark</title> <path d="M17,6.65881537 L17,19.5857864 L12,16.4078051 L7,19.5857864 L7,6.65881537 C7,5.19039219 8.11928813,4 9.5,4 L14.5,4 C15.8807119,4 17,5.19039219 17,6.65881537 Z"/> </svg>
      <% end %>
    <% end %>
  <% end %>
</div>