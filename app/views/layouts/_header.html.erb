<header>

  <div class="header-box">
    <div class="side-header">
      <div class="header-items">
        <div class="header-top">
          <div class="site-logo">
            <%= link_to "Catena", root_path, class:"logo"%>
          </div>
        </div>

        <div class="nav-menu-items">
          <div class="nav-menu-icons">

          <% if logged_in? %>
            <%= link_to home_path, class:"nav-link" do %>
              <div>
                <svg role="img" xmlns="http://www.w3.org/2000/svg" width="25px" height="25px" viewBox="0 0 24 24" aria-labelledby="homeAltIconTitle" stroke="#787c7b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none" color="black"> <path d="M3 10.182V22h18V10.182L12 2z"/> <rect width="6" height="8" x="9" y="14"/> </svg>
                <span>ホーム</span>
              </div>
            <% end %>

            <%= link_to "#", class:"nav-link" do %>
              <div>
              <svg role="img" xmlns="http://www.w3.org/2000/svg" width="25px" height="25px" viewBox="0 0 24 24" aria-labelledby="starIconTitle" stroke="#787c7b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none" color="black"> <polygon points="12 17.844 6.183 20.902 7.294 14.425 2.588 9.838 9.092 8.893 12 3 14.908 8.893 21.412 9.838 16.706 14.425 17.817 20.902"/> </svg>
                <span>おすすめ</span>
              </div>
            <% end %>

            <%= link_to "#", class:"nav-link" do %>
              <div>
              <svg width="26px" height="26px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-labelledby="layersIconTitle" stroke="#787c7b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" color="#2329D6"> <title id="layersIconTitle">Layers</title> <path d="M12 4L20 8.00004L12 12L4 8.00004L12 4Z"/> <path d="M20 12L12 16L4 12"/> <path d="M20 16L12 20L4 16"/> </svg>
                <span>購入済み</span>
              </div>
            <% end %>

            <%= link_to "#", class:"nav-link" do %>
              <div>
              <svg role="img" xmlns="http://www.w3.org/2000/svg" width="26px" height="26px" viewBox="0 0 24 24" aria-labelledby="bookmarkIconTitle" stroke="#787c7b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none" color="black"> <title id="bookmarkIconTitle">Bookmark</title> <path d="M17,6.65881537 L17,19.5857864 L12,16.4078051 L7,19.5857864 L7,6.65881537 C7,5.19039219 8.11928813,4 9.5,4 L14.5,4 C15.8807119,4 17,5.19039219 17,6.65881537 Z"/> </svg>
                <span>ブックマーク</span>
              </div>
            <% end %>

            <%= link_to current_user, class:"nav-link" do %>
              <div>
              <svg role="img" xmlns="http://www.w3.org/2000/svg" width="26px" height="26px" viewBox="0 0 24 24" aria-labelledby="personIconTitle" stroke="#787c7b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none" color="#2329D6"> <title id="personIconTitle">Person</title> <path d="M4,20 C4,17 8,17 10,15 C11,14 8,14 8,9 C8,5.667 9.333,4 12,4 C14.667,4 16,5.667 16,9 C16,14 13,14 14,15 C16,17 20,17 20,20"/> </svg>
                <span>マイページ</span>
              </div>
            <% end %>
            
          <% else %>
            <%= link_to "#", class:"nav-link" do %>
              <div>
              <svg role="img" xmlns="http://www.w3.org/2000/svg" width="25px" height="25px" viewBox="0 0 24 24" aria-labelledby="starIconTitle" stroke="#787c7b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none" color="black"> <polygon points="12 17.844 6.183 20.902 7.294 14.425 2.588 9.838 9.092 8.893 12 3 14.908 8.893 21.412 9.838 16.706 14.425 17.817 20.902"/> </svg>
                <span>おすすめ</span>
              </div>
            <% end %>
          <% end %>
          </div>
        </div>

      <div class="favorite-users-title">
        <a href="#">
          <svg role="img" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path d="M6.166 16.943l1.4 1.4-4.622 4.657h-2.944l6.166-6.057zm11.768-6.012c2.322-2.322 4.482-.457 6.066-1.931l-8-8c-1.474 1.584.142 3.494-2.18 5.817-3.016 3.016-4.861-.625-10.228 4.742l9.6 9.6c5.367-5.367 1.725-7.211 4.742-10.228z"/></svg>
          <span>お気に入りユーザー</span>
        </a>
      </div>
      <div class="favorite-users">
        <a href="#">
          <%= image_tag 'kazetachinu049.jpg', class:'user-icon' %>
          <div class="user-status">
            <div class="user-info">
              <span>ユーザーネーム</span>
              <span>(@username)</span>
            </div>
            <span>シン・エヴァンゲリオン見てきた</span>
          </div>
        </a>
        <nav>
        <ul>
          <li><%= link_to "ユーザー", users_path %></li>
          <% if logged_in? %>
            <li><%= link_to "パスワード変更", "#" %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "ログイン", login_path %></li>
            <li><%= link_to "アカウント作成", signup_path %></li>
          <% end %>
        </ul>
      </nav>
      </div>
    </div>
  </div>
  
</header>
