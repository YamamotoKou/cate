<% provide(:title, "ログイン") %>
<div class="form-wrap">
  <div class="form-container">
    <span class="form-discription">Catenaにログインする</span>
    <div class="form-title-link">
      <%= link_to "ログイン", login_path, class: "login-link now-link" %>
      <%= link_to "新規登録", signup_path, class: "signup-link" %>
    </div>
    <div>
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :メールアドレス %>
        <%= f.email_field :email %>
        <%= f.label :パスワード %>
        <%= f.password_field :password %>
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          <span>次回からログインを求めない</span>
        <% end %>
        <%= f.submit "ログイン" %>
      <% end %>
      <%= link_to "パスワードをお忘れですか？", new_password_reset_path, class: "link" %>
    </div>
  </div>
</div>