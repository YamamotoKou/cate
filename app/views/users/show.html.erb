<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image? %>
          <%= image_tag @user.image.url %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
      <div>
        <%= link_to "プロフィール編集", edit_user_path(current_user), class: "btn btn-x btn-primary" %>
      </div>
    <% end %>
  </aside>
</div>
